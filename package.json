{
  "bin": {
    "ecommerce": "bin/ecommerce.js"
  },
  "description": "An e-commerce project used to explore event-based APIs and microservices.",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "3.908.0",
    "@aws-sdk/client-cognito-identity-provider": "3.908.0",
    "@aws-sdk/client-dynamodb": "3.908.0",
    "@aws-sdk/client-s3": "3.908.0",
    "@aws-sdk/lib-dynamodb": "3.908.0",
    "@effect/schema": "0.75.5",
    "@sindresorhus/is": "7.1.0",
    "aws-cdk-lib": "2.219.0",
    "constructs": "10.4.2",
    "effect": "3.18.4",
    "envalid": "8.1.0",
    "nanoid": "5.1.6",
    "openid-client": "6.8.1",
    "package-directory": "8.1.0",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@faker-js/faker": "10.0.0",
    "@release-it/conventional-changelog": "10.0.1",
    "@types/aws-lambda": "8.10.155",
    "@types/debug": "4.1.12",
    "@types/node": "22.18.10",
    "@vitest/coverage-v8": "3.2.4",
    "aws-cdk": "2.1030.0",
    "del-cli": "7.0.0",
    "dotenv": "17.2.3",
    "fishery": "2.3.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "pactum": "3.8.0",
    "release-it": "19.0.5",
    "testdouble": "3.20.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "name": "ecommerce",
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "cdk": "NODE_ENV=production cdk",
    "clean": "del-cli coverage",
    "format": "biome format --fix --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "biome lint --fix --no-errors-on-unmatched .",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "vitest run --dir test/unit --config ./vite.config.unit.ts",
    "test:cov": "vitest run --coverage --dir test/unit --config ./vite.config.unit.ts",
    "test:watch": "vitest --dir test/unit --config ./vite.config.unit.ts",
    "test:e2e": "vitest run --dir test/e2e --config ./vite.config.e2e.ts",
    "test:e2e:watch": "vitest --dir test/e2e --config ./vite.config.e2e.ts",
    "watch": "tsc -w"
  },
  "type": "module",
  "version": "0.0.0"
}

{
  "bin": {
    "ecommerce": "bin/ecommerce.js"
  },
  "description": "An e-commerce project used to explore event-based APIs and microservices.",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "3.782.0",
    "@aws-sdk/client-cognito-identity-provider": "3.782.0",
    "@aws-sdk/client-dynamodb": "3.782.0",
    "@aws-sdk/client-s3": "3.782.0",
    "@aws-sdk/lib-dynamodb": "3.782.0",
    "@effect/schema": "0.75.5",
    "@sindresorhus/is": "7.0.1",
    "aws-cdk-lib": "2.188.0",
    "constructs": "10.4.2",
    "effect": "3.14.6",
    "envalid": "8.0.0",
    "fast-check": "4.1.0",
    "nanoid": "5.1.5",
    "openid-client": "6.4.1",
    "pkg-dir": "8.0.0",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@faker-js/faker": "9.6.0",
    "@release-it/conventional-changelog": "10.0.0",
    "@types/aws-lambda": "8.10.148",
    "@types/debug": "4.1.12",
    "@types/node": "22.14.0",
    "@vitest/coverage-v8": "3.1.1",
    "aws-cdk": "2.1007.0",
    "del-cli": "6.0.0",
    "dotenv": "16.4.7",
    "fishery": "2.2.3",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "pactum": "3.7.6",
    "release-it": "18.1.2",
    "testdouble": "3.20.2",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  },
  "name": "ecommerce",
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "cdk": "NODE_ENV=production cdk",
    "clean": "del-cli coverage",
    "format": "biome format --write --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "biome lint --apply --no-errors-on-unmatched .",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "vitest run --dir test/unit --config ./vite.config.unit.ts",
    "test:cov": "vitest run --coverage --dir test/unit --config ./vite.config.unit.ts",
    "test:watch": "vitest --dir test/unit --config ./vite.config.unit.ts",
    "test:e2e": "vitest run --dir test/e2e --config ./vite.config.e2e.ts",
    "test:e2e:watch": "vitest --dir test/e2e --config ./vite.config.e2e.ts",
    "watch": "tsc -w"
  },
  "type": "module",
  "version": "0.0.0"
}
